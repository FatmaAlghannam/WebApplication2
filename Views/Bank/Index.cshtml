
            @model BankDashBoardViewModel



  @inject IViewLocalizer local




<div class="container-fluid">
    <div class="row">
        <div class="text-center">
            <h1 class="display-4"> @local["Bank Branches:"] </h1>
        </div>

    </div>

    <div class="row pb-2">
        <div  class="col-3 offset-9">
            <div class="text-center">
                <a href="/Bank/Register" class="btn btn-outline-secondary">@local["New Branch"]</a>
            </div>

        </div>
        
    </div>
   
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">@local["Location"]</th>
                        <th class="text-center">@local["Details"]</th>
                        <th class="text-center">@local["Map"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bank in Model.BranchList)
                    {
                        <tr>
                            <td>
                                <img src="images/KFH.jpg" alt="profile image" height="33" class="mr-2" />
                                @bank.LocationName
                            </td>
                            <td class="text-center">
                                <a href="/Bank/Details/@bank.Id">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"></path>
                                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"></path>
                                    </svg>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="https://@bank.LocationURL" target="_blank" class="btn btn-success">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                        <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"></path>
                                        <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"></path>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@local["Total Branches"]</h5>
                    <p class="card-text">@Model.TotalBranch</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@local["Total Employees"]</h5>
                    <p class="card-text">@Model.TotalEmployee</p>
                </div>
            </div>
        </div>
    </div>
</div>